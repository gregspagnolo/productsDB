<h4>Edit Product</h4>

<form action="/products/<%= @product.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<div class="row">
    		<form class="col s12">
      	<div class="row">
        <div class="input-field col s12">
          <input id="name" type="text" class="validate" name="product[name]" value="<%= @product.name %>">
          <label for="name">Name</label>
        </div>
        <div class="input-field col s12">
          <input id="description" type="text" class="validate" name="product[description]" value="<%= @product.description %>">
          <label for="description">Description</label>
        </div>
      </div>
			  <label for="price">Category</label>
      <div class="row">
        <div class="input-field col s12">
        	<select class="browser-default" name="product[category_id]">
				<% @categories.each do |c| %>
					<% if c.id == @product.category.id %>
					<option selected><%= @product.category.name %></option>
					<% else %>
					<option value="<%= c.id %>"><%= c.name %></option>
					<% end %>
				<% end %>
			</select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="price" type="text" class="validate" name="product[price]" value="<%= @product.price %>">
          <label for="price">Price</label>
        </div>
      </div>
      	<button class="btn waves-effect waves-light" type="submit" name="action">Update
    		<i class="material-icons right">send</i>
  		</button>
</form>