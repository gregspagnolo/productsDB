<div class="container">
	<a href="/comments/" class="waves-effect waves-light btn">View All Comments</a>
	<table class="bordered">
		<thead>
			<tr>
				<th data-field="name">Name</th>
				<th data-field="name">Description</th>
				<th data-field="name">Category</th>
				<th data-field="email">Price</th>
				<th data-field="blank"></th>
			</tr>
		<% @products.each do |product| %>
		<tbody>
			<tr>
				<td><%= product.name %></td>
				<td><%= product.description %></td>
				<td><%= product.category.name %></td>
				<td><%= number_to_currency(product.price) %></td>
				<td><a href="/products/<%= product.id %>"><i class="material-icons">visibility</i>  <a href="/products/<%= product.id %>/edit"><i class="material-icons">mode_edit</i>  <a href="products/<%= product.id %>" data-method='delete'><i class="material-icons">delete</i></a></td>
			</tr>
		</tbody>
		<% end %>
	</table>
 
	<a href="products/new" class="waves-effect waves-light btn">New Product</a>

</div>