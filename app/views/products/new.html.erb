<div class="container">
<h4>Add New Product</h4>
	<form action="/create" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<select class="browser-default" name="product[category_id]">
		<% @categories.each do |c| %>
			<option value="<%= c.id %>"><%= c.name %></option>
		<% end %>
	</select>

	
      	<div class="row">
        <div class="input-field col s12">
          <input id="name" type="text" class="validate" name="product[name]">
          <label for="name">Name</label>
        </div>
        <div class="input-field col s12">
          <input id="description" type="text" class="validate" name="product[description]">
          <label for="description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="price" type="text" class="validate" name="product[price]">
          <label for="price">Price</label>
        </div>
      </div>
      	<button class="btn waves-effect waves-light" type="submit" name="action">Create
    		<i class="material-icons right">send</i>
  		</button>
    </form>
  </div> 
</div>